<body>
    <h1>Percentage calc</h1>
<form onsubmit="getPer(); return false;"> 
    <label for="tm">Total Marks</label>
    <input type="number" id="tm1" placeholder="Enter your tm">
    <label for="obt">Obt Marks</label>
    <input type="number" id="obt1" placeholder="Enter your obt">
    <button type="submit">Check Now</button>
</form>
<h1 id="change"></h1>

<script src="./index.js"></script>

</body>
